{
  "name": "caces-assistant",
  "version": "1.0.0",
  "description": "Assistant IA pour formations CACES - enregistrement, transcription, résumé automatique",
  "main": "main/index.js",
  "scripts": {
    "dev": "concurrently -k -n RENDERER,ELECTRON -c cyan,magenta \"vite --config vite.renderer.config.mjs\" \"wait-on http://localhost:5173 && cross-env ELECTRON_RENDERER_URL=http://localhost:5173 electron .\"",
    "build": "vite build --config vite.renderer.config.mjs",
    "dist:mac": "npm run build && electron-builder --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "keytar": "^7.9.0",
    "nodemailer": "^6.9.8",
    "openai": "^4.28.0",
    "puppeteer-core": "^21.0.0",
    "resend": "^3.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "postcss": "^8.4.35",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "vite": "^5.4.14",
    "wait-on": "^7.2.0"
  }
}
