# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TLS=false

# Security - CHANGE IN PRODUCTION!
API_KEY_SALT=development-salt-change-me-32chars!

# CORS - comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Features
ENABLE_MX_CHECK=true
MX_TIMEOUT_MS=2000
MX_CACHE_TTL_SECONDS=3600

# Lists
LISTS_AUTO_UPDATE=false
LISTS_UPDATE_INTERVAL_HOURS=24

# Storage
DEFAULT_STORE_MODE=hash
DEFAULT_TTL_DAYS=90

# Rate Limiting
RATE_LIMIT_FREE_PER_MIN=10
RATE_LIMIT_STARTER_PER_MIN=60
RATE_LIMIT_PRO_PER_MIN=300
